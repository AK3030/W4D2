<form action="<%= cat_rental_requests_url %>" method="post">
  <label for="cat_choice">Choose Cat</label>
  <select name="cat_rental_request[cat_id]" id="cat_choice">
    <option value="" selected disabled>-- Select Cat --</option>
    <% @cats.each do |cat| %>
      <option value="<%= cat.id %>"><%= cat.name %></option>
    <% end %>
  </select>
  <br>

  <label for="start_date">Start Date</label>
  <input type="date" id="start_date" name="cat_rental_request[start_date]">
  <br>

  <label for="end_date">Start Date</label>
  <input type="date" id="end_date" name="cat_rental_request[end_date]">
  <br>

  <input type="submit" value="Create Request">
</form>
